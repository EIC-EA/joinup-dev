{#
/**
 * @file
 * Textfield input for the licence search input.
 */
#}
<div class="licence-search">
  <form class="licence-search__form">
    <div class="licence-search__texts">
      <div class="licence-search__label">{{ "Enter"|t }} <strong><a href="https://spdx.org/ids" target="_blank">{{ "licence SPDX identifier"|t }}</a></strong></div>
      <div class="licence-search__input">
        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
          <div class="mdl-textfield__label-container">
            <input class="mdl-textfield__input" type="text" id="licence-search"/>
            <label class="mdl-textfield__label" for="licence-search">{{ "SPDX id"|t }}</label>
          </div>
        </div>
      </div>
      <div class="licence-search__label">{{ "or select licence terms below"|t }}</div>
    </div>
    <button id="licence-reset" class="licence-search__reset button button--blue mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent" type="reset" value="Reset">{{ 'Reset'|t }}</button>
  </form>
</div>
