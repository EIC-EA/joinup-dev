<header class="section section--header" role="banner">
  <div class="mdl-layout__header-row">
    <a href="{{ base_path }}" class="header-logo mdl-layout-title" title="{{ 'Home'|t }}">
      <img src="{{ base_path ~ directory }}/images/logo.png" alt="{{ 'Home'|t }}">
    </a>
    <div class="mdl-layout-spacer"></div>

    {{ page.header_central_menu.joinup_theme_main_menu }}

    <div class="mdl-layout-spacer"></div>

    <div class="search-bar search-bar--header search-bar--white mdl-textfield mdl-js-textfield mdl-textfield--expandable
    mdl-textfield--floating-label mdl-textfield--align-right">
      <label class="search-bar__label header__search-icon mdl-button mdl-js-button mdl-button--icon"
      for="search-bar__input">
        <span class="search-bar__icon icon icon--search"></span>
      </label>

      {#
        There are two variants of the search bar. Their visibility is controlled
        in the block configuration.
      #}
      {{ page.header.global_search }}
      {{ page.header.exposed_form_search_page }}
    </div>
{# Make sure to not render the search form twice. #}
{{ page.header|without('exposed_form_search_page', 'global_search') }}
{{ page.header_profile_menu }}

</div>
</header>
<div class="mdl-layout__drawer">
  {{ page.header_central_menu.joinup_theme_main_menu_mobile }}
</div>
