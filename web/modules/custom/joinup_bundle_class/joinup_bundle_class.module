<?php

/**
 * @file
 * Hook implementations for the Joinup Bundle Class module.
 */

declare(strict_types = 1);

/**
 * Implements hook_entity_type_alter().
 */
function joinup_bundle_class_entity_type_alter(array &$entity_types) {
  // Override the Node storage so we can instantiate bundle classes.
  $entity_types['node']->setStorageClass('Drupal\joinup_bundle_class\JoinupNodeStorage');
}
